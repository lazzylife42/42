{
	"Makefile": {
		"prefix": "generateMakefile",
		"body": [
			"NAME = ${1:program_name}",
			"CFLAGS = -Wall -Werror -Wextra -std=c++98",
			"RM = rm -f",
			"GCC = g++",
			"SRC = ${2:main.cpp}",
			"",
			"OBJS = $(SRC:.cpp=.o)",
			"",
			"all: $(NAME)",
			"",
			"$(NAME): $(OBJS)",
			"\t@echo \"\\033[1;32mCompiling $(NAME)...\\033[0m\"",
			"\t$(GCC) $(CFLAGS) $(OPTIONS) $(OBJS) -o $(NAME)",
			"\t@clear",
			"",
			"%.o : %.cpp",
			"\t@echo \"\\033[1;36mGenerating object files...\\033[0m\"",
			"\t$(GCC) $(CFLAGS) -c $< -o $@",
			"",
			"clean:",
			"\t@echo \"\\033[1;33mCleaning object files...\\033[0m\"",
			"\t$(RM) $(OBJS)",
			"\t@clear",
			"",
			"fclean: clean",
			"\t@echo \"\\033[1;33mRemoving $(NAME)...\\033[0m\"",
			"\t$(RM) $(NAME)",
			"\t@clear",
			"",
			"re: fclean all",
			"",
			".PHONY: clean fclean all re"
		],
		"description": "Generate Makefile with colored output"
	}
}